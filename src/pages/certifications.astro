---
import BaseLayout from "@/layouts/BaseLayout.astro";
import cv from "@/data/cv.json";
import CertificationCard from "@/components/cards/CertificationCard.astro";

const certifications = cv.certifications ?? [];
---

<BaseLayout
	title={`Certifications â€“ ${cv.name}`}
	description={`Courses and certifications obtained by ${cv.name}.`}
>
	<header class="mb-6 space-y-3">
		<h1 class="text-3xl font-bold md:text-4xl">
			Courses &amp; <span class="text-purple-600 dark:text-purple-300"
				>certifications</span
			>
		</h1>
		<p
			class="max-w-2xl text-sm text-slate-600 md:text-base dark:text-slate-300"
		>
			A collection of courses and certifications that reflect my commitment to
			continuous learning and professional growth.
		</p>
	</header>

	<section class="grid gap-5 md:grid-cols-1">
		{
			certifications.map((certification) => (
				<CertificationCard certification={certification} />
			))
		}
	</section>
</BaseLayout>
