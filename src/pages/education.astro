---
import BaseLayout from "@/layouts/BaseLayout.astro";
import cv from "@/data/cv.json";
import EducationCard from "@/components/cards/EducationCard";

const education = cv.education;
---

<BaseLayout
	title={`Education â€“ ${cv.name}`}
	description={`Education background of ${cv.name}.`}
>
	<!-- Header -->
	<header class="mb-6 space-y-3">
		<h1 class="text-3xl font-bold md:text-4xl">
			<span class="text-purple-600 dark:text-purple-300">Education</span> &amp; training
		</h1>
		<p
			class="max-w-2xl text-sm text-slate-600 md:text-base dark:text-slate-300"
		>
			Academic background supporting my journey as a software engineer.
		</p>
	</header>

	<!-- Education entries -->
	<section class="grid gap-5 md:grid-cols-1">
		{
			education.map((education) => (
				<EducationCard education={education} client:load />
			))
		}
	</section>
</BaseLayout>
