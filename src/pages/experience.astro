---
import BaseLayout from "@/layouts/BaseLayout.astro";
import cv from "@/data/cv.json";
import ExperienceCard from "@/components/cards/ExperienceCard";

const experience = cv.experience;
---

<BaseLayout
	title={`Experience â€“ ${cv.name}`}
	description={`Professional experience of ${cv.name}.`}
>
	<!-- Header -->
	<header class="mb-6 space-y-3">
		<h1 class="text-3xl font-bold md:text-4xl">
			Professional <span class="text-purple-600 dark:text-purple-300"
				>experience</span
			>
		</h1>
		<p
			class="max-w-2xl text-sm text-slate-600 md:text-base dark:text-slate-300"
		>
			Roles and responsibilities across different companies where I have
			contributed as a software engineer at various stages of my career.
		</p>
	</header>

	<!-- Experience list -->
	<section class="grid gap-5 md:grid-cols-1">
		{
			experience.map((experience) => (
				<ExperienceCard experience={experience} client:load />
			))
		}
	</section>
</BaseLayout>
