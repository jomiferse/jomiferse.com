---
import Footer from "@/components/common/Footer.astro";
import Header from "@/components/common/Header.astro";
import "@/styles/global.css";
import { getLocaleFromPath, type Locale } from "@/i18n";
import { getCv } from "@cv";

const { title, description } = Astro.props as {
	title: string;
	description: string;
};

const locale: Locale = getLocaleFromPath(Astro.url.pathname);
const cv = getCv(locale);

const canonicalUrl = Astro.site
	? new URL(Astro.url.pathname, Astro.site).toString()
	: Astro.url.pathname;

const buildAlternate = (loc: Locale) => {
	const pathname = Astro.url.pathname.replace(/^\/(en|es)/, "");
	const path = `/${loc}${pathname || ""}`;
	return Astro.site ? new URL(path, Astro.site).toString() : path;
};

const alternateEn = buildAlternate("en");
const alternateEs = buildAlternate("es");
---

<html lang={locale} class="min-h-screen scroll-smooth antialiased">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />

		<title>{title}</title>
		<meta name="description" content={description} />

		<link rel="shortcut icon" href="/favicon.ico" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

		<script is:inline>
			(function () {
				const stored = localStorage.getItem("theme");
				const prefersDark = window.matchMedia(
					"(prefers-color-scheme: dark)",
				).matches;
				const theme = stored ?? (prefersDark ? "dark" : "light");
				document.documentElement.classList.toggle("dark", theme === "dark");
			})();
		</script>

		<link rel="canonical" href={canonicalUrl} />

		<link rel="alternate" hreflang="en" href={alternateEn} />
		<link rel="alternate" hreflang="es" href={alternateEs} />
		<link rel="alternate" hreflang="x-default" href={alternateEn} />

		<meta name="robots" content="index,follow" />
		<meta name="author" content={cv.name} />

		<meta
			name="theme-color"
			content="#f8fafc"
			media="(prefers-color-scheme: light)"
		/>
		<meta
			name="theme-color"
			content="#09090b"
			media="(prefers-color-scheme: dark)"
		/>
	</head>

	<body
		class="relative flex min-h-screen flex-col bg-slate-50 text-slate-900 transition-colors before:pointer-events-none before:fixed before:inset-0 before:bg-[radial-gradient(1200px_circle_at_20%_-10%,rgba(99,102,241,0.10),transparent_60%),radial-gradient(1000px_circle_at_90%_10%,rgba(168,85,247,0.10),transparent_55%)] before:content-[''] dark:bg-zinc-950 dark:text-zinc-100 dark:before:bg-[radial-gradient(1200px_circle_at_20%_-10%,rgba(168,85,247,0.12),transparent_60%),radial-gradient(1000px_circle_at_90%_10%,rgba(99,102,241,0.10),transparent_55%)]"
	>
		<Header locale={locale} />
		<main
			class="mx-auto w-full max-w-5xl flex-1 px-4 pt-10 pb-12 md:pt-12 md:pb-16"
		>
			<slot />
		</main>
		<Footer locale={locale} />
	</body>
</html>
