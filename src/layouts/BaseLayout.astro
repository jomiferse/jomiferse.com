---
import Footer from "@/components/common/Footer.astro";
import Header from "@/components/common/Header.astro";
import "@/styles/global.css";
import cv from "@/data/cv.json";

const { title, description } = Astro.props;

const canonicalUrl = Astro.site
	? new URL(Astro.url.pathname, Astro.site).toString()
	: Astro.url.pathname;
---

<html lang="en" class="min-h-screen antialiased">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />

		<!-- Title & description -->
		<title>{title}</title>
		<meta name="description" content={description} />

		<link rel="shortcut icon" href="/favicon.ico" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

		<meta name="theme-color" content="#020617" />

		<link rel="canonical" href={canonicalUrl} />

		<meta name="robots" content="index,follow" />
		<meta name="author" content={`${cv.name}`} />
	</head>

	<body
		class="relative flex min-h-screen flex-col bg-zinc-950 text-zinc-100 transition-colors before:pointer-events-none before:fixed before:inset-0 before:bg-[radial-gradient(1200px_circle_at_20%_-10%,rgba(168,85,247,0.12),transparent_60%),radial-gradient(1000px_circle_at_90%_10%,rgba(99,102,241,0.10),transparent_55%)] before:content-['']"
	>
		<Header />
		<main
			class="mx-auto w-full max-w-4xl flex-1 px-4 pt-10 pb-12 transition-opacity duration-300 md:pt-12 md:pb-16"
		>
			<slot />
		</main>
		<Footer />
	</body>
</html>
