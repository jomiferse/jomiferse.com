---
import { Icon } from "astro-icon/components";
import cv from "@cv";
---

<footer
	class="border-t border-slate-200/70 bg-white/60 backdrop-blur-md dark:border-zinc-800/60 dark:bg-zinc-900/60"
>
	<div
		class="mx-auto flex max-w-5xl items-center justify-center gap-2 px-4 py-6"
	>
		<a
			href={cv.links.github}
			target="_blank"
			rel="noopener noreferrer"
			aria-label="GitHub"
			class="inline-flex h-11 w-11 items-center justify-center rounded-2xl text-slate-600 transition hover:bg-slate-100 hover:text-slate-900 dark:text-zinc-300 dark:hover:bg-zinc-800/40 dark:hover:text-zinc-50"
		>
			<Icon name="github" class="h-6 w-6" />
		</a>

		<a
			href={cv.links.linkedin}
			target="_blank"
			rel="noopener noreferrer"
			aria-label="LinkedIn"
			class="inline-flex h-11 w-11 items-center justify-center rounded-2xl text-slate-600 transition hover:bg-slate-100 hover:text-slate-900 dark:text-zinc-300 dark:hover:bg-zinc-800/40 dark:hover:text-zinc-50"
		>
			<Icon name="linkedin" class="h-6 w-6" />
		</a>

		<a
			href={`mailto:${cv.email}`}
			aria-label="Email"
			class="inline-flex h-11 w-11 items-center justify-center rounded-2xl text-slate-600 transition hover:bg-slate-100 hover:text-slate-900 dark:text-zinc-300 dark:hover:bg-zinc-800/40 dark:hover:text-zinc-50"
		>
			<Icon name="mail" class="h-6 w-6" />
		</a>
	</div>
</footer>
