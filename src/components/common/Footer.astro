---
import { Icon } from "astro-icon/components";
import cv from "@cv";
---

<footer
	class="border-t border-slate-300/40 bg-slate-100/60 backdrop-blur-sm dark:border-zinc-700/40 dark:bg-zinc-900/60"
>
	<div
		class="mx-auto flex max-w-5xl items-center justify-center gap-6 px-4 py-6"
	>
		<a
			href={cv.links.github}
			target="_blank"
			rel="noopener noreferrer"
			aria-label="GitHub"
			class="text-slate-500 transition hover:text-purple-400 dark:text-zinc-400 dark:hover:text-purple-300"
		>
			<Icon name="github" class="h-6 w-6" />
		</a>

		<a
			href={cv.links.linkedin}
			target="_blank"
			rel="noopener noreferrer"
			aria-label="LinkedIn"
			class="text-slate-500 transition hover:text-purple-400 dark:text-zinc-400 dark:hover:text-purple-300"
		>
			<Icon name="linkedin" class="h-6 w-6" />
		</a>

		<a
			href={`mailto:${cv.email}`}
			aria-label="Email"
			class="text-slate-500 transition hover:text-purple-400 dark:text-zinc-400 dark:hover:text-purple-300"
		>
			<Icon name="mail" class="h-6 w-6" />
		</a>
	</div>
</footer>
